{% extends 'base.html.twig' %}

{% block body %}
	{% if category is not defined %}

		<h1 class="text-center">Ajouter une catégorie</h1>

	{% else %}
             
		<h1 class="text-center">Modifier une catégorie</h1>

	{% endif %}

	<div class="row">

		<div class="col-8 mx-auto">
			{# 1ére façon : affichage global du formulaire #}
			{# {{ form(form) }} #}

			{# 2éme façon : affichage détaillé du form ,input par input#}
			{{ form_start(form, {'attr' : {novalidate: 'novalidate'}}
			) }}


				<div class="shadow"> {{form_row(form.name)}}
			</div>


			{% if category is not defined %}

				<button type="submit" class="d-block col-3 mx-auto btn my-3 btn btn-warning ">Ajouter</button>

			{% else %}

				<button type="submit" class="d-block col-3 mx-auto btn my-3 btn btn-warning ">Modifier</button>
                            
			{% endif %}


			{{form_end(form)}}


		</div>
	</div>

	{# {% if article is defined and article.photo is not null %} 
	       <div class="col-6"> 
	        <img src="{{ asset('uploads/') ~ article.photo }}" alt="" class="img-fluid">
	       </div>
	       {% endif %} #}

{% endblock %}
